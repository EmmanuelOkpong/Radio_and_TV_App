<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="116dp"
        android:layout_marginEnd="115dp"
        app:cardCornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/liteningtoradio">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/playId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="145dp"
        android:src="@drawable/playicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pauseId"
        app:layout_constraintStart_toEndOf="@+id/stopId"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

    </ImageView>

    <ImageView
        android:id="@+id/pauseId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="145dp"
        android:src="@drawable/pauseicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playId"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

    </ImageView>

    <ImageView
        android:id="@+id/stopId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="145dp"
        android:src="@drawable/stopicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>